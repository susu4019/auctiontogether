<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login"
    tools:context=".loginActivity">
    ​
    ​
    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="119dp"
        android:layout_height="153dp"
        android:layout_marginTop="112dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/realback" />
    ​
    ​

    ​

    <TextView
        android:id="@+id/textView9"
        android:layout_width="102dp"
        android:layout_height="41dp"
        android:layout_marginBottom="140dp"
        android:fontFamily="@font/linebold"
        android:text="회원가입"
        android:textColor="#050505"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.527"
        app:layout_constraintStart_toStartOf="parent" />
    ​
    <TextView
        android:id="@+id/gjpyeong"
        android:layout_width="102dp"
        android:layout_height="41dp"
        android:layout_marginBottom="192dp"
        android:fontFamily="@font/linebold"
        android:text="로그인"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.559"
        app:layout_constraintStart_toStartOf="parent" />
    ​
    <EditText
        android:id="@+id/edt_login_id"
        android:layout_width="237dp"
        android:layout_height="51dp"
        android:layout_marginTop="284dp"
        android:background="@null"
        android:ems="10"
        android:hint="아이디 입력"
        android:inputType="textPersonName"
        android:textColorHint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.552"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    ​
    ​

    <android.widget.Button
        android:id="@+id/btn_login"
        android:layout_width="253dp"
        android:layout_height="44dp"
        android:background="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.686" />
    ​
    <android.widget.Button
        android:id="@+id/btn_login_join"
        android:layout_width="249dp"
        android:layout_height="49dp"
        android:background="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.769" />

    <TextView
        android:id="@+id/tv_popup"
        android:layout_width="336dp"
        android:layout_height="81dp"
        android:layout_marginTop="44dp"
        android:fontFamily="@font/nanum4"
        android:gravity="center"
        android:text="경매 투게더"
        android:textColor="#040404"
        android:textSize="48sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edt_login_pw"
        android:layout_width="237dp"
        android:layout_height="51dp"
        android:ems="10"
        android:hint="비밀번호 입력"
        android:inputType="textPassword"
        android:textColorHint="@color/white"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.551"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.585" />
    ​
</androidx.constraintlayout.widget.ConstraintLayout>